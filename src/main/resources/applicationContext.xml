<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="word_period" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="period" />
                <entry key="UK" value="період" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_schedule_for" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="schedule for" />
                <entry key="UK" value="розклад для" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_group" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="group" />
                <entry key="UK" value="групи" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_monday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="monday" />
                <entry key="UK" value="понеділок" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_tuesday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="tuesday" />
                <entry key="UK" value="вівторок" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_wednesday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="wednesday" />
                <entry key="UK" value="середа" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_thursday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="thursday" />
                <entry key="UK" value="четверг" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_friday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="friday" />
                <entry key="UK" value="п’ятниця" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_saturday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="saturday" />
                <entry key="UK" value="субота" />
            </map>
        </constructor-arg>
    </bean>
    <bean id="word_sunday" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.util.Locale" value-type="java.lang.String">
                <entry key="EN" value="sunday" />
                <entry key="UK" value="неділя" />
            </map>
        </constructor-arg>
    </bean>

    <bean id="dictionary" class="java.util.HashMap" >
        <constructor-arg>
            <map key-type="java.lang.String" value-type="java.util.Map">
                <entry key="period" value-ref="word_period"/>
                <entry key="schedule for" value-ref="word_schedule_for"/>
                <entry key="group" value-ref="word_group"/>
                <entry key="monday" value-ref="word_monday"/>
                <entry key="tuesday" value-ref="word_tuesday"/>
                <entry key="wednesday" value-ref="word_wednesday"/>
                <entry key="thursday" value-ref="word_thursday"/>
                <entry key="friday" value-ref="word_friday"/>
                <entry key="saturday" value-ref="word_saturday"/>
                <entry key="sunday" value-ref="word_sunday"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="translator" class="com.softserve.util.Translator" >
        <constructor-arg ref="dictionary"/>
    </bean>

</beans>